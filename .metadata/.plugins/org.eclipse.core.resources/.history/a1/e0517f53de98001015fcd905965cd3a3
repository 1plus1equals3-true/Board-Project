<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<style>
.side-nav {
  /* fixed 속성으로 뷰포트에 바로 고정 */
  position: fixed;
  /* 뷰포트 상단에서 20px 떨어진 곳에 고정 */
  top: 100px; 
  /* 뷰포트 왼쪽에서 20px 떨어진 곳에 고정 */
  left: 10px;
  width: 80px;
  height: fit-content;
  border: 1px solid #ccc;
  padding: 10px;
  background-color: #f9f9f9;
  z-index: 10;
}

.side-nav h6 {
  margin-top: 0;
}

.side-nav h4 {
  margin-top: 0;
  margin-bottom: 10px;
}

.side-nav ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

.side-nav li {
  padding: 5px 0;
}
.side-nav a {
	color: black;
	text-decoration: none;
}
.side-nav a:hover {
	color: blue;
}
</style>

<div class="side-nav">
	<h4>게시판</h4>
	<ul>
		<li><h6><a href="../board/list_notice.jsp">공지사항</a></h6></li>
		<li><h6><a href="../board/list_member.jsp">회원 게시판</a></h6></li>
		<li><h6><a href="../board/list_anonymity.jsp">익명 게시판</a></h6></li>
		<li><h6><a href="../board/list_gallery.jsp">갤러리</a></h6></li>
	</ul>
</div>

<script>
    // 드래그할 요소 선택
    const draggableDiv = document.querySelector('.side-nav');

    // 마우스 누름, 이동, 떼는 이벤트를 추적하기 위한 변수
    let isDragging = false;
    let offsetX, offsetY;

    // 1. 마우스를 누른 순간 (mousedown)
    draggableDiv.addEventListener('mousedown', (e) => {
        isDragging = true;
        // 드래그 시작 시점의 마우스 위치와 요소의 현재 위치 간의 차이 계산
        offsetX = e.clientX - draggableDiv.getBoundingClientRect().left;
        offsetY = e.clientY - draggableDiv.getBoundingClientRect().top;
        
        // 드래그 중 커서가 텍스트를 선택하는 것을 방지
        document.body.style.userSelect = 'none';
        
        // 드래그 중인 요소를 가장 위로 올림
        draggableDiv.style.zIndex = '9999';
    });

    // 2. 마우스가 이동 중일 때 (mousemove)
    document.addEventListener('mousemove', (e) => {
        if (!isDragging) return; // 드래그 중이 아니면 함수 종료
        
        // 새로운 위치 계산
        let newX = e.clientX - offsetX;
        let newY = e.clientY - offsetY;
        
        // 계산된 새 위치를 요소의 'left'와 'top' 스타일로 적용
        draggableDiv.style.left = newX + 'px';
        draggableDiv.style.top = newY + 'px';
    });

    // 3. 마우스를 떼는 순간 (mouseup)
    document.addEventListener('mouseup', () => {
        isDragging = false;
        // 드래그가 끝나면 텍스트 선택 가능하도록 복원
        document.body.style.userSelect = '';
        // z-index 원래대로 복원 (필요에 따라)
        draggableDiv.style.zIndex = '10';
    });
</script>