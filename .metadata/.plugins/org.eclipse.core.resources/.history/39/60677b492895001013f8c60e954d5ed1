<%@ page language="java" contentType="application/json; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ page import="java.sql.*" %>
<%@ page import="lib.DB" %>
<%@ page trimDirectiveWhitespaces="true" %>
<%
    // 응답 JSON을 바로 출력하기 위해 out.clear() 또는 버퍼 설정을 하지 않습니다.
    response.setContentType("application/json");
    response.setCharacterEncoding("UTF-8");

    // JSP 내장 객체 사용 (로그인 정보는 세션에서 가져와야 함)
    String login_id = (String) session.getAttribute("login_id"); 
    String cidx = request.getParameter("cidx");
    
    // 최종 응답 메시지
    String jsonResponse;

    if (login_id == null || cidx == null || cidx.isEmpty()) {
        jsonResponse = "{\"success\": false, \"message\": \"로그인이 필요하거나 댓글 정보가 부족합니다.\"}";
    } else {
        Connection conn = null;
        PreparedStatement ps = null;
        ResultSet rs = null;
        boolean isOwner = false;

        try {
            conn = DB.getConnection();
            
            // 1. 로그인한 사용자가 해당 댓글의 작성자인지 확인
            String checkSql = "SELECT uid FROM comment WHERE idx = ?";
            ps = conn.prepareStatement(checkSql);
            ps.setString(1, cidx);
            rs = ps.executeQuery();

            if (rs.next()) {
                String comment_uid = rs.getString("uid");
                if (login_id.equals(comment_uid)) {
                    isOwner = true;
                }
            }
            rs.close();
            ps.close();

            if (isOwner) {
                // 2. 작성자가 맞으면 댓글 삭제 실행
                String deleteSql = "DELETE FROM comment WHERE idx = ? AND uid = ?";
                ps = conn.prepareStatement(deleteSql);
                ps.setString(1, cidx);
                ps.setString(2, login_id);
                
                int deletedRows = ps.executeUpdate();

                if (deletedRows > 0) {
                    jsonResponse = "{\"success\": true, \"message\": \"댓글 삭제 성공\"}";
                } else {
                    jsonResponse = "{\"success\": false, \"message\": \"삭제 권한이 없거나 댓글을 찾을 수 없습니다.\"}";
                }
            } else {
                jsonResponse = "{\"success\": false, \"message\": \"댓글을 삭제할 권한이 없습니다.\"}";
            }
            
        } catch (Exception e) {
            e.printStackTrace();
            jsonResponse = "{\"success\": false, \"message\": \"데이터베이스 오류: " + e.getMessage().replace("\"", "'") + "\"}";
        } finally {
            if (rs != null) try { rs.close(); } catch(SQLException ignored) {}
            if (ps != null) try { ps.close(); } catch(SQLException ignored) {}
            if (conn != null) try { conn.close(); } catch(SQLException ignored) {}
        }
    }
    
    // 최종 JSON 응답 출력
    out.print(jsonResponse);
%>